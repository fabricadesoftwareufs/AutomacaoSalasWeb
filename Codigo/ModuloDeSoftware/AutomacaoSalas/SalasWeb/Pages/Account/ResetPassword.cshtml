@page "/Account/ResetPassword"
@model SalasWeb.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir Senha";
    Layout = "_Layout";
}

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Redefinir Senha</h3>
                    </div>
                    <form method="post">
                        <div class="card-body">
                            @if (ModelState.ErrorCount > 0)
                            {
                                <div class="alert alert-danger">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </div>
                            }

                            <input asp-for="Input.Code" type="hidden" />
                            <input asp-for="Input.Email" type="hidden" />

                            <p class="text-muted">
                                Digite sua nova senha para o email: <strong>@Model.Input?.Email</strong>
                            </p>

                            <div class="form-group">
                                <label asp-for="Input.Password" class="control-label"></label>
                                <div class="input-group">
                                    <input asp-for="Input.Password" class="form-control" placeholder="Nova Senha" type="password" />
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                                <div class="input-group">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmar Nova Senha" type="password" />
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary btn-block">
                                Redefinir Senha
                            </button>
                        </div>
                    </form>
                </div>

                <div class="text-center mt-3">
                    <p class="mb-1">
                        <a asp-page="./Login">Voltar ao Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}