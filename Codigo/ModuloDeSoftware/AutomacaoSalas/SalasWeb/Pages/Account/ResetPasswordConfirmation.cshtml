@page "/Account/ResetPasswordConfirmation"
@model SalasWeb.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Senha Redefinida";
    Layout = "_Layout";
}

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-check-circle"></i> Sucesso!
                        </h3>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>

                        <h4 class="text-success mb-3">Senha Redefinida com Sucesso!</h4>

                        <p class="text-muted mb-4">
                            Sua senha foi alterada com sucesso. Agora você pode fazer login com sua nova senha.
                        </p>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Dicas de Segurança:</strong>
                            <ul class="text-left mt-2 mb-0">
                                <li>Não compartilhe sua senha com ninguém</li>
                                <li>Use senhas diferentes para cada conta</li>
                                <li>Considere usar um gerenciador de senhas</li>
                            </ul>
                        </div>
                    </div>

                    <div class="card-footer text-center">
                        <a asp-page="./Login" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Fazer Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>