@page "/Account/ForgotPassword"
@model SalasWeb.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu a senha?";
    Layout = "_Layout";
}

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Recuperar Senha</h3>
                    </div>
                    <form method="post">
                        <div class="card-body">
                            @if (ModelState.ErrorCount > 0)
                            {
                                <div class="alert alert-danger">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </div>
                            }

                            @if (TempData["StatusMessage"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["StatusMessage"]
                                </div>
                            }

                            <p class="text-muted">
                                Digite seu email para receber um link de recuperação de senha.
                            </p>

                            <div class="form-group">
                                <label asp-for="Input.Email" class="control-label"></label>
                                <div class="input-group">
                                    <input asp-for="Input.Email" class="form-control" placeholder="Digite seu email" autocomplete="email" />
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-envelope"></span>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary btn-block">
                                Enviar Link de Recuperação
                            </button>
                        </div>
                    </form>
                </div>

                <div class="text-center mt-3">
                    <p class="mb-1">
                        <a asp-page="./Login">Voltar ao Login</a>
                    </p>
                    <p class="mb-0">
                        <a asp-page="./Register">Criar conta</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}