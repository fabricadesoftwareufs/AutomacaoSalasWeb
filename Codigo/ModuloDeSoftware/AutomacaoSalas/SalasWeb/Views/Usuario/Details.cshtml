@model Model.ViewModel.UsuarioViewModel

@{
    ViewData["Title"] = "Details";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h2 class="card-title">Detalhes do Usuário</h2>
                    </div>

                    <div class="card-body">
                        <div class="col-md-10">
                            <dl class="dl-horizontal">

                                <dt>
                                    @Html.DisplayNameFor(model => model.UsuarioModel.Nome)
                                </dt>
                                <dd>
                                    <p class="form-control">@Html.DisplayFor(model => model.UsuarioModel.Nome)</p>
                                </dd>

                                <dt>
                                    Email
                                </dt>
                                <dd>
                                    <p class="form-control">@Model.Email</p>
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.UsuarioModel.Cpf)
                                </dt>
                                <dd>
                                    <p class="form-control">@Html.DisplayFor(model => model.UsuarioModel.Cpf, "Cpf")</p>
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.UsuarioModel.DataNascimento)
                                </dt>
                                <dd>
                                    <p class="form-control">@Html.DisplayFor(model => model.UsuarioModel.DataNascimento)</p>
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.TipoUsuarioModel.Descricao)
                                </dt>
                                <dd>
                                    <p class="form-control">@Html.DisplayFor(model => model.TipoUsuarioModel.Descricao)</p>
                                </dd>

                                <dt>
                                    Organização
                                </dt>
                                <dd>
                                    <p class="form-control">@Html.DisplayFor(model => model.OrganizacaoModel.RazaoSocial)</p>
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@Model.UsuarioModel.Id" class="btn btn-info">Editar</a> |
                        <a asp-action="Index" class="btn btn-primary">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>