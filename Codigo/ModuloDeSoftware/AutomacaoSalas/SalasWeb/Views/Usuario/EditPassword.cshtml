@using Model.ViewModel
@model AlterarSenhaViewModel

@{
    ViewData["Title"] = "Alterar Senha";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h2 class="card-title">Alterar Senha</h2>
                    </div>
                    <form asp-action="EditPassword" method="post">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <input type="hidden" asp-for="UsuarioId" />
                         
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="SenhaAtual" class="control-label"></label>
                                <div class="input-group">
                                    <input asp-for="SenhaAtual" class="form-control" type="password" autocomplete="current-password" />
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="SenhaAtual" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NovaSenha" class="control-label"></label>
                                <div class="input-group">
                                    <input asp-for="NovaSenha" class="form-control" type="password" autocomplete="new-password" />
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-key"></span>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="NovaSenha" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    A senha deve ter pelo menos 6 caracteres.
                                </small>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmarNovaSenha" class="control-label"></label>
                                <div class="input-group">
                                    <input asp-for="ConfirmarNovaSenha" class="form-control" type="password" autocomplete="new-password" />
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-key"></span>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="ConfirmarNovaSenha" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Alterar Senha
                            </button>
                            <a class="btn btn-primary" asp-action="Index" asp-controller="Home">
                                <i class="fas fa-times"></i> Cancelar
                            </a> 
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@* Mensagens de feedback *@
@if (TempData["mensagemSucesso"] != null)
{
    <div id="mensagem-retorno" onclick="swtAlertRedirectIndex('success','Parabéns!', '@TempData["mensagemSucesso"]','/Home/Index')"></div>
}
else if (TempData["mensagemErro"] != null)
{
    <div id="mensagem-retorno" onclick="swtAlert('warning','Falha!', '@TempData["mensagemErro"]')"></div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Trigger mensagem de retorno se existir
            if (document.querySelector('#mensagem-retorno')) {
                document.getElementById("mensagem-retorno").click();
            }

            // Validação em tempo real para confirmação de senha
            $('#ConfirmarNovaSenha').on('input', function() {
                var novaSenha = $('#NovaSenha').val();
                var confirmarSenha = $(this).val();
                var feedback = $(this).siblings('.text-danger');

                if (confirmarSenha && novaSenha !== confirmarSenha) {
                    feedback.text('As senhas não coincidem');
                    feedback.show();
                } else {
                    feedback.hide();
                }
            });

            // Limpar mensagens de erro ao digitar
            $('input[type="password"]').on('input', function() {
                $(this).siblings('.text-danger').hide();
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="~/js/sweet-alert.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}